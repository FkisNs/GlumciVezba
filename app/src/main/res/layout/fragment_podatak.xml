<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"/>

    <TextView
        android:id="@+id/tv_prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_ime"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_ime"/>

    <TextView
        android:id="@+id/tv_biografija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_prezime"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tv_datum"
        android:layout_below="@id/tv_biografija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tv_filmovi"
        android:layout_below="@id/tv_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <RatingBar
        android:id="@+id/rb_ocena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_below="@id/tv_filmovi"
        android:layout_alignParentRight="true"/>

</RelativeLayout>